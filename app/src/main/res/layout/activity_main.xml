<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp">

    <Button
        android:id="@+id/listview_single_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/listview_single_multi"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleview_single_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recycleview_single_multi"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleview_header_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recycleview_header_footer"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/recycleview_emptyview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recycleview_emptyview"
        android:textAllCaps="false" />


</LinearLayout>
